    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
    <div> @* this is comment   *@
    Date Time:@DateTime.Now<br/>
    @{ 
        int a, b, c;
        a = 10;
        b = 21;
        c = a + b;
    }
    value of c is:@c<br/>
