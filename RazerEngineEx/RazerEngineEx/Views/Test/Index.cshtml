        List <string> lst = new List<string>();
        
        lst.Add("c#");
        lst.Add("Anguler");
        lst.Add("vb");
        lst.Add("java");
        lst.Add("c++");
        }
    <ol type="I">
        @foreach(var temp in lst)
            {
                <li>@temp</li>
            }
        </ol>
        
    </div>
