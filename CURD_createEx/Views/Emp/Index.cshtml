@model IEnumerable<CURD_createEx.Models.emptbl>

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
    <div> 
        <h2>Emp List</h2>
        @Html.ActionLink("Create New","Create","Emp")
        <table border="1">
            <tr>
                <td colspan="3">@using (Html.BeginForm("SearchByName", "Emp", FormMethod.Post))
                {
                 @:Name:
                 <input type="text" name="Ename"/>
                 <input type="submit" value="search"/>
                }
                </td>
               </tr>
               <tr>
                   <td colspan="4">@using (Html.BeginForm("SearchByDep","Emp",FormMethod.Post))
            {
                @:Select Dept:
                   @Html.DropDownList("dept", "Select Dept")
                       <input type="submit" value="Search"/>
            }
                   </td>
               </tr>
            
                <thead>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(p => p.empid)
                        <th>@Html.DisplayNameFor(p => p.empname)</th>
                        <th>@Html.DisplayNameFor(p => p.address)</th>
                        <th>@Html.DisplayNameFor(p => p.emailid)</th>
                        <th>@Html.DisplayNameFor(p => p.mono)</th>
                        <th>@Html.DisplayNameFor(p => p.salary)</th>
                        <th>@Html.DisplayNameFor(p => p.depttbl.deptname)</th>
                        
                    </tr>
                </thead>
                <tbody>
                    @foreach (var temp in Model)
                    {
                        <tr>
                            <td>@Html.DisplayFor(p => temp.empid)</td>
                            <td>@Html.DisplayFor(p => temp.empname)</td>
                            <td>@Html.DisplayFor(p => temp.address)</td>
                            <td>@Html.DisplayFor(p => temp.emailid)</td>
                            <td>@Html.DisplayFor(p => temp.mono)</td>
                            <td>@Html.DisplayFor(p => temp.salary)</td>
                            <td>@Html.DisplayFor(p => temp.depttbl.deptname)</td>
                            <td>@Html.ActionLink("Edit", "edit", "Emp", new { id = temp.empid }, null)</td>
                            <td>@Html.ActionLink("Delete", "delete", "Emp", new { id = temp.empid }, null)</td>
                        </tr>
                    }
                </tbody>
        </table>
    </div>
</body>
</html>
