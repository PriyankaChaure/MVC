@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
    <div>
        @*This is used for Comment*@
        DateTime:@DateTime.Now<br/>
        @{ 
            int a, b, c;
            a = 10;
            b = 20;
            c = a + b;
           
        }
        value of c is:@c<br/>
        @if (c % 2 == 0)
            {
                @*  <h2>c is even!!!</h2>   *@
                @: c is even
            }
          else
            {
                @*<h2>c is odd!!!</h2>*@
                <text> c is odd</text>
            }

        @for(int i=0;i<5;i++)
            {
                <h3>value of i is:@i</h3>
            }
        @{
            List<string> lst = new List<string>();
            lst.Add("Priyanka");
            lst.Add("Prachi");
            lst.Add("Prajkta");
            lst.Add("Pranjal");
            lst.Add("Pranali");
        }
        <ul>
            @foreach(var temp in lst)
            {
                <li>@temp</li>
            }
        </ul>
    </div>
</body>
</html>
